		<Update>
			<Set FreeBuildingThisCity="BUILDINGCLASS_MILITARY_BASE" PrereqTech="TECH_BALLISTICS" FreePromotion="PROMOTION_STATUE_ZEUS" UnitUpgradeCostMod="0" GreatPeopleRateChange="3" />
