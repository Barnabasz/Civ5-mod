<GameData>

	<!-- War Heroes: Great Generals and Great Admirals provide additional +10HP when healing to Units within 1 tiles. Gain a free Great General and a free Great Admiral. -->

	<!-- UPDATE: In-game name changed from War Heroes to Militarism to match with Civilopedia entry. So this is now a bit of a mess containing both MILITARISM and WAR_HEROES -entries... -->

	<Policies>
		<Update>
			<Set Level="2" IsWarHero="false" IncludesOneShotFreeUnits="true" />
			<Where Type="POLICY_MILITARISM" />
		</Update>
	</Policies>
	<Policy_FreeUnitClasses>
		<Row>
			<PolicyType>POLICY_MILITARISM</PolicyType>
			<UnitClassType>UNITCLASS_GREAT_GENERAL</UnitClassType>
			<Count>1</Count>
		</Row>
		<Row>
			<PolicyType>POLICY_MILITARISM</PolicyType>
			<UnitClassType>UNITCLASS_GREAT_ADMIRAL</UnitClassType>
			<Count>1</Count>
		</Row>
	</Policy_FreeUnitClasses>
	<Policy_BuildingClassHappiness>
		<Delete PolicyType="POLICY_MILITARISM" />
	</Policy_BuildingClassHappiness>

	<!-- Give promotion on this Policy. -->

	<Policy_FreePromotions>
		<Row>
			<PolicyType>POLICY_MILITARISM</PolicyType>
			<PromotionType>PROMOTION_WAR_HEROES</PromotionType>
		</Row>
	</Policy_FreePromotions>

	<UnitPromotions_CivilianUnitType>
		<Row>
			<PromotionType>PROMOTION_WAR_HEROES</PromotionType>
			<UnitType>UNIT_GREAT_GENERAL</UnitType>
		</Row>
		<Row>
			<PromotionType>PROMOTION_WAR_HEROES</PromotionType>
			<UnitType>UNIT_GREAT_ADMIRAL</UnitType>
		</Row>
	</UnitPromotions_CivilianUnitType>

	<UnitPromotions>
		<Row>
			<Type>PROMOTION_WAR_HEROES</Type>
			<Description>TXT_KEY_PROMOTION_WAR_HEROES</Description>
			<Help>TXT_KEY_PROMOTION_WAR_HEROES_HELP</Help>
			<Sound>AS2D_IF_LEVELUP</Sound>
			<CannotBeChosen>true</CannotBeChosen>
			<PortraitIndex>59</PortraitIndex>
			<IconAtlas>ABILITY_ATLAS</IconAtlas>
			<PediaType>PEDIA_SHARED</PediaType>
			<EnemyHealChange>10</EnemyHealChange>
			<NeutralHealChange>10</NeutralHealChange>
			<FriendlyHealChange>10</FriendlyHealChange>
			<SameTileHealChange>10</SameTileHealChange>
			<AdjacentTileHealChange>10</AdjacentTileHealChange>
			<PediaEntry>TXT_KEY_PROMOTION_WAR_HEROES</PediaEntry>
		</Row>
	</UnitPromotions>
	
