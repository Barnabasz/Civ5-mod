<GameData>

	<!-- Universal Suffrage: +50% Great People points in the Capital. -->
	<Policies>
		<Update>
			<Set Level="2" GreatPeopleRateModifier="0" HalfSpecialistUnhappiness="false" GoldenAgeDurationMod="0" />
			<Where Type="POLICY_UNIVERSAL_SUFFRAGE" />
		</Update>
	</Policies>
	
	<!-- Cheating! +50% Great People points are actually given from a hidden dummy building, because the game doesn't really let you add great people points only to a capital, or add them to only a certain type of building when picking a policy (they are always Global applying to all cities). -->

	<BuildingClasses>
		<Row>
			<Type>DUMMY_BUILDINGCLASS_T2_UNIVERSAL_SUFFRAGE</Type>
			<DefaultBuilding>DUMMY_BUILDING_T2_UNIVERSAL_SUFFRAGE</DefaultBuilding>
			<Description>Universal Suffrage Dummy BuildingClass</Description>
		</Row>
	</BuildingClasses>
	<Buildings>
		<Row>
			<Type>DUMMY_BUILDING_T2_UNIVERSAL_SUFFRAGE</Type>
			<BuildingClass>DUMMY_BUILDINGCLASS_T2_UNIVERSAL_SUFFRAGE</BuildingClass>
			<Description>Universal Suffrage Dummy Building</Description>
			<GreatWorkCount>-1</GreatWorkCount>
			<Cost>-1</Cost>
			<FaithCost>-1</FaithCost>
			<PrereqTech>NULL</PrereqTech>
			<NeverCapture>true</NeverCapture>
			<!-- Gameplay Effects below -->
			<GreatPeopleRateModifier>50</GreatPeopleRateModifier>
		</Row>
	</Buildings>

